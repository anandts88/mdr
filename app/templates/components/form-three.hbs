  <div class="form-group row">
    <label class="col-sm-8">LAST TIME YOU ATTENDED AA/NA:</label>
    <div class="col-sm-4">
      {{input-date-picker class="form-control" placeholder="Click to change" readonly="" value=form.four_ltyaan_formatted}}
    </div>
  </div>

  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-8">DID YOU HAVE A DRUG OR ALCHOL PROBLEM:</label>
