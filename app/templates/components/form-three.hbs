  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-2">LAST SA TX ADMIT:</label>
    <div class="col-sm-4">
      {{input-date-picker class="form-control" placeholder="Click to change" readonly="" value=form.four_last_sa_tx_admit_formatted}}
    </div>

    <label class="col-sm-2">LENGTH OF STAY:</label>
    <div class="col-sm-4">
      {{input type="text" class="form-control" value=form.four_last_sa_tx_admit_length_of_stay autocomplete="off"}}
