  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-2">Other treatment history narrative:</label>
    <div class="col-sm-10">
      {{textarea class="form-control" value=form.four_othn rows="7" maxlength=500}}
    </div>
  </div>

  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-1">&nbsp;</label>
    <div class="col-md-2 form-group-right-align">
      <button class="btn btn-primary btn-block" type="submit" autocomplete="off">Next (Page 4)</button>
    </div>
    <label class="col-sm-1">&nbsp;</label>
    <div class="col-md-2 form-group-right-align">
      <button class="btn btn-primary btn-block" autocomplete="off" {{action "previous"}}>Previous (Page 2)</button>
