<form {{action "next" on="submit"}}>
  <div class="form-group row form-section">
    <label class="col-sm-2">SECTION FOUR</label>
    <div class="col-sm-10 form-section-title">
      DRUG TREATMENT HISTORY
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-10">NUMBER OF TIMES YOU WERE ADMITTED TO A DETOX UNIT IN PAST 12 MONTHS:</label>
    <div class="col-sm-2">
      {{input type="text" class="form-control" value=form.four_notywataduip12m autocomplete="off"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-10">NUMBER OF TIMES YOU WERE ADMITTED TO A SA TREATMENT PROGRAM IN PAST 24 MONTHS:</label>
    <div class="col-sm-2">
      {{input type="text" class="form-control" value=form.four_notywatstpip24m autocomplete="off"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-10">EVER COURT ORDERED TO TREATMENT:</label>
    <div class="col-sm-2">
      <div>
        <div class="radio-inline">
          <label>
            {{input-radio group=form.four_ecott value="Yes"}} Yes
          </label>
        </div>
        <div class="radio-inline">
          <label>
            {{input-radio group=form.four_ecott value="No"}} No
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-10">EVER FORCED TO ENROLL IN TREATMENT:</label>
    <div class="col-sm-2">
      <div>
        <div class="radio-inline">
          <label>
            {{input-radio group=form.four_efteit value="Yes"}} Yes
          </label>
        </div>
        <div class="radio-inline">
          <label>
            {{input-radio group=form.four_efteit value="No"}} No
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-2">LAST DETOX ADMIT:</label>
    <div class="col-sm-4">
      {{input-date-picker class="form-control" placeholder="Click to change" readonly="" value=form.four_last_detox_admit_formatted}}
    </div>

    <label class="col-sm-2">LENGTH OF STAY:</label>
    <div class="col-sm-4">
      {{input type="text" class="form-control" value=form.four_last_detox_admit_lentgh_of_stay autocomplete="off"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2">TREATING AGENCY:</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control" value=form.four_treating_agency autocomplete="off"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2">DRUG DETOXED FROM:</label>
    <div class="col-sm-4">
      {{input type="text" class="form-control" value=form.four_drug_detoxed_from autocomplete="off"}}
    </div>

    <label class="col-sm-2">DISH DATE:</label>
    <div class="col-sm-4">
      {{input-date-picker class="form-control" placeholder="Click to change" readonly="" value=form.four_drug_detoxed_from_disch_date_formatted}}
