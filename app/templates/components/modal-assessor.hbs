<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" {{action "hideDialog"}}>Ã—</button>
		<h4 class="modal-title">
			{{model.first_name}} {{model.last_name}}
		</h4>
	</div>
	<div class="modal-body">
		<div>
			<div class="form-group row">
				<label class="col-sm-4">Date of birth:</label>
				<div class="col-sm-8">{{date-format model.dob "YYYY-MM-DD" "MMM DD YYYY"}}</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-4">Gender:</label>
				<div class="col-sm-8">{{model.gender}}</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-4">Email:</label>
				<div class="col-sm-8">{{model.email_id}}</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default" {{action "hideDialog"}}>Close</button>
	</div>
</div>
