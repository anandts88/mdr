<form {{action "next" on="submit"}}>
  <div class="form-group row form-section">
    <label class="col-sm-2">SECTION NINE</label>
    <div class="col-sm-10 form-section-title">
      DIAGNOSTIC IMPRESSION &AMP; RATIONALE
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-7">PRIMARY DIAGNOSIS:</label>
    <div class="col-sm-5">
      {{#if noneditable}}
        {{form.nine_pd}}
      {{else}}
        {{input type="text" class="form-control" value=form.nine_pd autocomplete="off"}}
      {{/if}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-7">SECONDARY DIAGNOSIS:</label>
    <div class="col-sm-5">
      {{#if noneditable}}
        {{form.nine_sd}}
      {{else}}
        {{input type="text" class="form-control" value=form.nine_sd autocomplete="off"}}
      {{/if}}
    </div>
  </div>

  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-2">Diagnostic Impression Rationale:</label>
    <div class="col-sm-10">
      {{#if noneditable}}
        {{form.nine_dir}}
      {{else}}
        {{textarea class="form-control" value=form.nine_dir rows="15" maxlength=500}}
      {{/if}}
    </div>
  </div>

  <div class="form-group row form-seperator"></div>

  <div class="form-group row">
    <label class="col-sm-1">&nbsp;</label>
    <div class="col-md-2 form-group-right-align">
      <button class="btn btn-primary btn-block" type="submit" autocomplete="off">{{if model.completed 'Next' 'Save & Continue'}}</button>
    </div>
    <label class="col-sm-1">&nbsp;</label>
    <div class="col-md-2 form-group-right-align">
      <button class="btn btn-primary btn-block" autocomplete="off" {{action "previous"}}>Previous (Page 7)</button>
    </div>
  </div>
</form>
